{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Debug Streamlit within container",
        "type": "debugpy",
        "request": "attach",
        "connect": {
          "host": "localhost",
          "port": 5678
        },
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/src"
          }
        ]
      }
    ]
  }
  