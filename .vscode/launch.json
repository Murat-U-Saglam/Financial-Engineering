{
  "configurations": [
    {
      "name": "Python: Debug Streamlit within container (Frontend)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 1112 // Replace 1112 with your actual FRONTEND_DEBUGGING_PORT
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/src/frontend",
          "remoteRoot": "/frontend"
        }
      ]
    },
    {
      "name": "Python: Debug FastAPI within container (Backend)",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 1111 // Replace 1111 with your actual BACKEND_DEBUGGING_PORT
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/src/backend",
          "remoteRoot": "/backend"
        }
      ],
    }
  ]
}
